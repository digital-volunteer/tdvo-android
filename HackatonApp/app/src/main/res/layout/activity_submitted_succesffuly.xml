<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Submiited Successfully"
        android:textSize="50sp"
        android:fontFamily="@font/indigo_daisy"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/tv_subtitle"/>

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Now volunteers near your location will be able to see your request. When anyone choses to help, you will receive their information and ratings and then you can chose whether you want them to help you or not. You can also use the map to ask volunteers for help directly."
        android:textSize="15sp"
        android:layout_margin="20dp"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginBottom="50dp"
        android:layout_above="@id/et_email"/>


    <Button
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="15dp"
        android:visibility="gone"
        android:background="@drawable/btn"
        android:fontFamily="@font/roboto_regular"
        android:layout_above="@id/et_password"
        android:textSize="15sp" />

    <Button
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:background="#68ADEC"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_regular"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:text="See the map with volunteers "
        android:textSize="15sp" />





</RelativeLayout>